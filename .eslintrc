{
  "root": true,
  "extends": ["xo/esnext", "xo-react"],
  "globals": {
    "window": true,
    "document": true
  },
  "rules": {
    "react/jsx-closing-bracket-location": [2, "tag-aligned"],
    "max-len": [
      "error",
      {
        "code": 80,
        "comments": 100,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "tabWidth": 2
      }
    ]
  }
}
